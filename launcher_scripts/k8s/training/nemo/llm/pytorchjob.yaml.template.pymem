apiVersion: kubeflow.org/v1
kind: PyTorchJob
metadata:
  name: ${JOB_PREFIX}-gbs${GBS}-d${USE_DATA}-py${PYCACHE}-sl${NCCL_IB_SL}-n${GPU_NUMS}-${RUN_ID}
  namespace: default
spec: 
  pytorchReplicaSpecs:
    Master:
      replicas: 1
      restartPolicy: Never
      template:
        metadata:
          annotations:
            sidecar.istio.io/inject: "false"
        spec: &job-spec
          terminationGracePeriodSeconds: 1
          containers:
          - args:
            - "export NODE_RANK=$RANK && unset RANK && \
               export NCCL_IB_SL=${NCCL_IB_SL} && ${CMD}"
            command:
            - /usr/bin/env
            - bash
            - -c
            env:
            - name: NODE_NAME
              valueFrom:
                fieldRef:
                  fieldPath: spec.nodeName
            - name: POD_NAME
              valueFrom:
                fieldRef:
                  fieldPath: metadata.name
            - name: TZ
              value: CST-8
            image: registry-ap-southeast.scitix.ai/hpc/nemo:24.07-sicl
            imagePullPolicy: Always 
            name: pytorch
            resources:
              limits:
                cpu: "120"
                memory: 1800Gi
                nvidia.com/gpu: "8"
                rdma/hca_shared_devices_all: "1"
              requests:
                cpu: "120"
                memory: 1800Gi
                nvidia.com/gpu: "8"
                rdma/hca_shared_devices_all: "1"
            securityContext:
              capabilities:
                add:
                - IPC_LOCK
            volumeMounts:
            - mountPath: /dev/shm
              name: dev-shm
            - mountPath: /workspace/deep_learning_examples
              name: workspace
            - mountPath: /tmp
              name: tmp
            - name: dataset
              mountPath: /datasets/preset
          volumes:
          #- emptyDir:
          #    medium: Memory
          #  name: dev-shm
          - hostPath:
              path: /dev/shm
              type: Directory
            name: dev-shm
          - hostPath:
              path: /data/scitix/deep_learning_examples
              type: ""
            name: workspace
          - hostPath:
              path: /tmp 
              type: Directory
            name: tmp
          - hostPath:
              path: /data/scitix/datasets/preset
              type: Directory
            name: dataset
          affinity:
            nodeAffinity:
              requiredDuringSchedulingIgnoredDuringExecution:
                nodeSelectorTerms:
                  - matchExpressions:
                      - key: scitix.ai/gpu-type
                        operator: In
                        values:
                          - h100nvlink80
    Worker:
      replicas: $WORKER_NUMS
      restartPolicy: Never
      template:
        metadata:
          annotations:
            sidecar.istio.io/inject: "false"
        spec:
          <<: *job-spec
